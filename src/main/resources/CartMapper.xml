<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shike.dao.ICartDao">
    <resultMap id="Cart" type="com.shike.model.Cart">
        <id column="id" property="id" jdbcType="BIGINT"></id>
        <result column="cartId" property="cartId" jdbcType="VARCHAR"></result>
        <result column="shopId" property="shopId" jdbcType="VARCHAR"></result>
        <result column="skuId" property="skuId" jdbcType="VARCHAR"></result>
        <result column="amount" property="amount" jdbcType="INTEGER"></result>
        <result column="price" property="price" jdbcType="INTEGER"></result>
        <result column="userId" property="userId" jdbcType="VARCHAR"></result>
        <result column="status" property="status" jdbcType="INTEGER"></result>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"></result>
        <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP"></result>
        <result column="description" property="description" jdbcType="VARCHAR"></result>
    </resultMap>
    <sql id="Base_Column_List">
        id, cartId, shopId, skuId, amount, price, userId, status, createTime, updateTime, description
    </sql>
    <sql id="deleteStatus">
        -1
    </sql>
    <!--根据购物车id查询信息,唯一-->
    <select id="selectCartByCartId" parameterType="com.shike.model.Cart" resultMap="Cart">
        select <include refid="Base_Column_List"></include>
        from
        t_cart_cart
        where
            cartId = #{cartId, jdbcType=VARCHAR}
        <if test="status != null">
            and status = #{status, jdbcType=INTEGER}
        </if>
    </select>
    <!--根据用户id查询购物车列表-->
    <select id="selectCartByUserId" parameterType="com.shike.model.Cart" resultMap="Cart">
        select <include refid="Base_Column_List"></include>
        from
        t_cart_cart
        where
            userId = #{userId, jdbcType=VARCHAR}
        <if test="status != null">
            and status = #{status, jdbcType=VARCHAR}
        </if>
    </select>
    <!--插入一条信息-->
    <insert id="insertCart" parameterType="com.shike.model.Cart" useGeneratedKeys="true"
            keyProperty="id">
        insert into t_cart_cart
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cartId != null">
                cartId,
            </if>
            <if test="shopId != null">
                shopId,
            </if>
            <if test="skuId != null">
                skuId,
            </if>
            <if test="amount != null">
                amount,
            </if>
            <if test="price != null">
                price,
            </if>
            <if test="userId != null">
                userId,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createTime != null">
                createTime,
            </if>
            <if test="updateTime != null">
                updateTime,
            </if>
            <if test="description != null">
                description
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cartId != null">
                #{cartId},
            </if>
            <if test="shopId != null">
                #{shopId},
            </if>
            <if test="skuId != null">
                #{skuId},
            </if>
            <if test="amount != null">
                #{amount},
            </if>
            <if test="price != null">
                #{price},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="description != null">
                #{description}
            </if>
        </trim>
    </insert>
    <!--更新购物车商品数量-->
    <update id="updateCartBySkuId" parameterType="com.shike.model.Cart">
        update t_cart_cart
        <set>
            amount = #{amount, jdbcType=INTEGER}
        </set>
        where userId = #{userId} and skuId= #{skuId} and status = 0
    </update>
    <!--删除购物车-->
    <update id="deleteCartByCartId" parameterType="com.shike.model.Cart">
        update t_cart_cart
        <set>
            status = <include refid="deleteStatus"></include>
        </set>
        where cartId in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.cartId, jdbcType=BIGINT}
        </foreach>
    </update>
</mapper>